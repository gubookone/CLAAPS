<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/aaps_theme_dark_background"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_insulin_refill_guide_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStep1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_insulin_refill_step1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvStep2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_insulin_refill_step2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvStep1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvStep3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_insulin_refill_step3"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvStep2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvStep4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_insulin_refill_step4"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvStep3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvStep5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_insulin_refill_step5"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvStep4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnDismiss"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="@string/common_btn_ok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>