<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tv_step_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_patch_step_1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_step1_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_step1_title"
            tools:text="STEP 1." />

        <TextView
            android:id="@+id/tv_step1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/carelevo_patch_needle_insertion_step1_title"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_step_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_step1_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="@string/carelevo_patch_needle_insertion_step1_desc"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_step1_title" />

        <TextView
            android:id="@+id/tv_step_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carelevo_patch_step_2"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_step2_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_step2_title"
            tools:text="STEP 2." />

        <TextView
            android:id="@+id/tv_step2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/carelevo_patch_needle_insertion_step2_title"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_step_2"
            app:layout_constraintTop_toBottomOf="@id/tv_step1_desc" />

        <TextView
            android:id="@+id/tv_step2_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="@string/carelevo_patch_needle_insertion_step2_desc"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_step2_title" />

        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_desc_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_desc_warning"
            app:srcCompat="@drawable/ic_toast_error" />

        <TextView
            android:id="@+id/tv_desc_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/carelevo_patch_safety_check_desc_warning"
            android:textColor="?attr/ribbonCriticalColor"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/iv_warning"
            app:layout_constraintTop_toBottomOf="@id/tv_step2_desc"
            tools:text="안전점검 후 인슐린 방울이 맺혔는지 확인해 주세요." />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_discard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_ok"
                android:layout_marginEnd="8dp"
                android:text="시용 종료" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_discard"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="확인" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>