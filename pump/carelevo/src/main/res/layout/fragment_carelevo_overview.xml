<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="info.nightscout.androidaps.plugins.pump.carelevo.ui.viewModel.CarelevoOverviewViewModel" />
        <import type="info.nightscout.androidaps.plugins.pump.carelevo.ui.ext.ViewExtKt"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/container_buttons">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/container_patch_state"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:key="@{@string/carelevo_patch_state_key}"
                    app:value="@{viewModel.bleState == null ? @string/carelevo_state_none_value : viewModel.bleState ? @string/carelevo_state_connected_value : @string/carelevo_state_disconnected_value}"
                    app:topLineVisible="@{true}"
                    app:bottomLineVisible="@{true}"/>

                <include
                    android:id="@+id/container_serial_num"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_patch_state"
                    app:key="@{@string/carelevo_serial_number_key}"
                    app:value="@{viewModel.serialNumber}"
                    app:topLineVisible="@{false}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_lot_num"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_serial_num"
                    app:key="@{@string/carelevo_lot_number_key}"
                    app:value="@{viewModel.lotNumber}"
                    app:topLineVisible="@{false}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_boot_time"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_lot_num"
                    app:key="@{@string/carelevo_boot_date_time_key}"
                    app:value="@{viewModel.bootDateTime}"
                    app:topLineVisible="@{false}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_expired_time"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_boot_time"
                    app:key="@{@string/carelevo_expiration_key}"
                    app:value="@{String.valueOf(viewModel.expirationTime)}"
                    app:topLineVisible="@{false}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_pump_state"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_expired_time"
                    app:key="@{@string/carelevo_infusion_status_key}"
                    app:value="@{ViewExtKt.setInfusionStateText(viewModel.infusionStatus, context)}"
                    app:topLineVisible="@{false}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_basal_rate"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_pump_state"
                    app:key="@{@string/carelevo_basal_rate_key}"
                    app:value="@{String.valueOf(viewModel.basalRate)}"
                    app:topLineVisible="@{true}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_temp_basal_rate"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_basal_rate"
                    app:key="@{@string/carelevo_temp_basal_rate_key}"
                    app:value="@{String.valueOf(viewModel.tempBasalRate)}"
                    app:topLineVisible="@{false}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_insulin_remain"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_temp_basal_rate"
                    app:key="@{@string/carelevo_insulin_remain_key}"
                    app:value="@{String.valueOf(viewModel.insulinRemains)}"
                    app:topLineVisible="@{true}"
                    app:bottomLineVisible="@{false}"/>

                <include
                    android:id="@+id/container_total_delivery_doze"
                    layout="@layout/item_carelevo_row_key_value_vertical_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/container_insulin_remain"
                    app:key="@{@string/carelevo_total_delivered_insulin_key}"
                    app:value="@{String.valueOf(viewModel.totalDeliveredInsulinAmount)}"
                    app:topLineVisible="@{true}"
                    app:bottomLineVisible="@{true}"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_discard"
                android:text="@{viewModel.bleState == null ? @string/carelevo_overview_connect_btn_label : viewModel.bleState ? @string/carelevo_overview_connect_btn_label : @string/carelevo_overview_communication_btn_label}"/>

            <Button
                android:id="@+id/btn_discard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_connect"
                app:layout_constraintEnd_toStartOf="@+id/btn_pump"
                android:layout_marginHorizontal="8dp"
                android:text="discard"/>

            <Button
                android:id="@+id/btn_pump"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_discard"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{viewModel.isPumpStop ? @string/carelevo_overview_pump_resume_btn_label : @string/carelevo_overview_pump_stop_btn_label}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>